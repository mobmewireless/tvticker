<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView android:layout_width="60px" android:layout_height="80px"
		android:src="@android:drawable/btn_star_big_on" android:id="@+id/left_icon"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />
	<TextView android:layout_height="fill_parent" android:id="@+id/label"
		android:layout_centerInParent="true" android:layout_width="fill_parent"
		android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_toRightOf="@+id/left_icon" />

</RelativeLayout>
