<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@xml/custom_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fav_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/favorites_empty_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

    <Button
        android:id="@+id/browseAllShowsButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@xml/custom_blue_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Browse all shows"
        android:textColor="@drawable/white" />

</LinearLayout>