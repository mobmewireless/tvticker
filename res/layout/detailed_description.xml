<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<!-- Movie thumb and description -->
	<RelativeLayout android:layout_width="match_parent" android:layout_marginRight="10dp"
		android:layout_marginTop="20dp" android:layout_height="wrap_content"
		android:id="@+id/relativeLayoutMovieMeta">
		<ImageView android:layout_height="wrap_content" android:id="@+id/movie_thumb"
			android:src="@drawable/ic_launcher" android:layout_width="60px"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />

		<TextView android:layout_height="wrap_content" android:text=""
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/movie_description" android:layout_width="match_parent"
			android:layout_centerVertical="true" android:layout_toRightOf="@id/movie_thumb"
			android:layout_marginLeft="10dp" />

	</RelativeLayout>

	<!-- IMDB Rating and reviews -->
	<RelativeLayout android:layout_width="match_parent" android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp" android:layout_marginTop="20dp"
		android:layout_height="wrap_content" android:id="@+id/relativeLayoutImdb">

		<Button android:id="@+id/button_go_imdb" android:background="@xml/custom_blue_button"
			android:layout_height="wrap_content" android:text="@string/imdb_button_text"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" />

		<LinearLayout android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:id="@+id/linearLayoutImdbRating"
			android:orientation="vertical" android:layout_width="wrap_content">

			<TextView android:layout_height="wrap_content" android:text="TextView"
				android:layout_marginLeft="10dp" android:id="@+id/imdb_rating_text"
				android:layout_width="wrap_content" android:textStyle="bold" />

			<RatingBar android:layout_height="wrap_content" android:id="@+id/imdb_ratingBar"
				style="?android:attr/ratingBarStyleSmall" android:layout_width="wrap_content"
				android:numStars="10" />

		</LinearLayout>

	</RelativeLayout>


	<SlidingDrawer android:id="@+id/slidingDrawer1" android:layout_height="wrap_content"
		android:handle="@+id/handle" android:content="@+id/content"
		android:layout_marginTop="5dp" android:layout_width="match_parent">

		<Button android:text="Share" android:background="@xml/custom_blue_button"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/handle" />
		<LinearLayout android:id="@+id/content" android:gravity="center"
			android:background="@drawable/rounded_border" android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton android:src="@drawable/facebook_button"
				android:background="@android:color/transparent" android:id="@+id/go_facebook_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<ImageButton android:src="@drawable/twitter_button"
				android:background="@android:color/transparent" android:id="@+id/go_twitter_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

		</LinearLayout>

	</SlidingDrawer>



</LinearLayout>
