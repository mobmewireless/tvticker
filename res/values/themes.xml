<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SherlockCustom" parent="@style/Theme.Sherlock.Light">
        <item name="abBackground">@color/ab_bg_dark_gray</item>
        <item name="abIcon">@drawable/tv</item>
    </style>

    <style name="Theme.SherlockCustom.HomeTitle" parent="@style/Theme.SherlockCustom">
        <item name="abTitle">"TICKER"</item>
        <item name="abTitleTextStyle">@style/MainHeaderTitle</item>
        <item name="abHeight">40dp</item>
    </style>

    <style name="Theme.SherlockCustom.ItemTitleAndSubTitle" parent="@style/Theme.SherlockCustom">
        <item name="abTitleTextStyle">@style/MainTitle</item>
        <item name="abSubtitleTextStyle">@style/SubTitle</item>
        <item name="abHeight">55dp</item>
    </style>

    <style name="Theme.NullBackground" parent="@android:style/Theme.Black">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>