<?xml version="1.0" encoding="utf-8"?>
<manifest package="in.mobme.tvticker"
    android:versionCode="1"
    android:versionName="0.8" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SherlockCustom.ItemTitleAndSubTitle" >
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.NullBackground" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity>

        <activity android:name=".SetFavouriteChannelsActivity" />

    
        <activity android:name=".activity.AllShowsFilterListActivity" />
        <activity android:name=".activity.AllShowsResultListActivity" />
        <activity android:name=".DetailedDescriptionActivity" />
        <activity android:name=".activity.AllShowsMainPageActivity" />

        <activity
            android:name=".ReminderPreferenceActivity"
            android:label="Reminder Settings" />
        <activity android:name=".EditShowRemindersActivity" />
        <activity
            android:name=".SettingsPreferenceActivity"
            android:label="TvTicker Settings" />
        <activity
            android:name=".SearchableActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        
        <service android:name=".notification.ShowNotificationService" />
    </application>

</manifest>
